{
  "name": "noted",
  "version": "1.0.19",
  "description": "A modern task management app with tabs",
  "main": "main.js",
  "homepage": "https://github.com/martimaur/not-ed",
  "repository": {
    "type": "git",
    "url": "https://github.com/martimaur/not-ed.git"
  },
  "author": {
    "name": "Martim Auriault",
    "email": "your-email@example.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-dir": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always"
  },
  "build": {
    "appId": "com.martimaur.noted",
    "productName": "Noted",
    "asar": false,
    "publish": {
      "provider": "github",
      "owner": "martimaur",
      "repo": "not-ed",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraFiles": [
      {
        "from": "node_modules/electron/dist",
        "to": "./",
        "filter": [
          "ffmpeg.dll"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/notedLogo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "not-ed-${version}-windows.exe",
      "allowElevation": true,
      "perMachine": false,
      "runAfterFinish": true,
      "menuCategory": true,
      "differentialPackage": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/notedLogo.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/notedLogo.png"
    }
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "graceful-fs": "^4.2.11"
  }
}
